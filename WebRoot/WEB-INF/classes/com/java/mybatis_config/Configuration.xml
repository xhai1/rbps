<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="multipleResultSetsEnabled" value="true" />
		<setting name="useColumnLabel" value="true" />
		<setting name="useGeneratedKeys" value="true" />
		<setting name="defaultExecutorType" value="SIMPLE" />
		<setting name="defaultStatementTimeout" value="25000" />
	</settings>
	
	<typeAliases>
		<typeAlias type="com.java.entity.User"               alias="user" />
		<typeAlias type="com.java.entity.Menu"               alias="menu" />
		<typeAlias type="com.java.entity.Role"               alias="role" />
		<typeAlias type="com.java.entity.Log"                alias="log" />
		<typeAlias type="com.java.entity.Operation"          alias="operation" />
		<typeAlias type="com.java.entity.Attachment"         alias="attachment" />
		<typeAlias type="com.java.entity.Token"              alias="token" />
	</typeAliases>

		
	<mappers>
		<mapper resource="com/java/mybatis_config/User.xml" />
		 <mapper resource="com/java/mybatis_config/Menu.xml" />
		<mapper resource="com/java/mybatis_config/Role.xml" />
		<mapper resource="com/java/mybatis_config/Log.xml" />
		<mapper resource="com/java/mybatis_config/Operation.xml" />
		<mapper resource="com/java/mybatis_config/Attachment.xml" /> 
		<mapper resource="com/java/mybatis_config/Token.xml" /> 
	</mappers>
	 
</configuration>